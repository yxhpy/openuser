# OpenUser Docker Environment Configuration
# Copy this file to .env and update with your values

# Application
OPENUSER_ENV=production
OPENUSER_DEBUG=false
API_PORT=8000
FRONTEND_PORT=3000

# Database
POSTGRES_DB=openuser
POSTGRES_USER=openuser
POSTGRES_PASSWORD=changeme-generate-secure-password
POSTGRES_PORT=5432

# Redis
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET_KEY=changeme-generate-secure-random-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Model Configuration
DEVICE=cpu  # or cuda for GPU support

# Feishu Integration (Optional)
FEISHU_APP_ID=
FEISHU_APP_SECRET=
FEISHU_VERIFICATION_TOKEN=
FEISHU_ENCRYPT_KEY=

# WeChat Work Integration (Optional)
WECHAT_CORP_ID=
WECHAT_CORP_SECRET=
WECHAT_AGENT_ID=
WECHAT_TOKEN=
WECHAT_ENCODING_AES_KEY=
