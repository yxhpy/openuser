# Environment
OPENUSER_ENV=development
OPENUSER_DEBUG=true
OPENUSER_LOG_LEVEL=INFO

# API Configuration
OPENUSER_API_HOST=0.0.0.0
OPENUSER_API_PORT=8000
OPENUSER_API_WORKERS=4
OPENUSER_API_RELOAD=true

# Database
DATABASE_URL=postgresql://openuser:password@localhost:5432/openuser
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security
SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Digital Human Models
MODEL_PATH=./models
DEVICE=cuda  # or cpu
BATCH_SIZE=1
MAX_VIDEO_LENGTH=60

# Feishu Integration
FEISHU_APP_ID=your_feishu_app_id
FEISHU_APP_SECRET=your_feishu_app_secret
FEISHU_VERIFICATION_TOKEN=your_verification_token
FEISHU_ENCRYPT_KEY=your_encrypt_key

# WeChat Work Integration
WECHAT_CORP_ID=your_corp_id
WECHAT_CORP_SECRET=your_corp_secret
WECHAT_AGENT_ID=your_agent_id
WECHAT_TOKEN=your_token
WECHAT_ENCODING_AES_KEY=your_aes_key

# Plugin System
PLUGIN_DIR=./src/plugins
PLUGIN_AUTO_RELOAD=true
PLUGIN_REGISTRY_URL=https://registry.openuser.io

# Agent System
AGENT_DIR=./src/agents
AGENT_AUTO_UPDATE=true
AGENT_MAX_MEMORY=1000

# File Upload
MAX_UPLOAD_SIZE=100MB
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp
ALLOWED_AUDIO_TYPES=wav,mp3,flac
ALLOWED_VIDEO_TYPES=mp4,avi,mov

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false

# Development
RELOAD_ON_CHANGE=true
SHOW_SQL_QUERIES=false
